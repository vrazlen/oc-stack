# LLM API Key Proxy - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env with real values to git

# =============================================================================
# PROXY SERVER CONFIGURATION
# =============================================================================

# Host to bind the proxy server (use 127.0.0.1 for local-only access)
PROXY_HOST=127.0.0.1

# Port for the proxy server
PROXY_PORT=8000

# =============================================================================
# AUTHENTICATION
# =============================================================================

# API key required to access this proxy (clients must provide this)
PROXY_API_KEY=

# =============================================================================
# UPSTREAM PROVIDER API KEYS
# =============================================================================

# Google Gemini API Key (for gemini_cli provider)
GEMINI_API_KEY=

# Anthropic API Key (for antigravity/claude models)
ANTHROPIC_API_KEY=

# =============================================================================
# MODEL ALLOWLISTS (comma-separated model IDs)
# =============================================================================

# Gemini CLI models allowed through proxy
GEMINI_CLI_MODELS=gemini-2.5-pro,gemini-2.5-flash,gemini-2.5-flash-lite,gemini-3-pro-preview

# Antigravity models allowed through proxy
ANTIGRAVITY_MODELS=gemini-3-pro-preview,claude-sonnet-4-5,claude-opus-4-5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable request/response body logging (NOT recommended for production)
LOG_BODIES=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Requests per minute per client (0 = disabled)
RATE_LIMIT_RPM=0

# =============================================================================
# SECURITY
# =============================================================================

# Allowed upstream hosts (comma-separated, for SSRF protection)
ALLOWED_UPSTREAM_HOSTS=generativelanguage.googleapis.com,api.anthropic.com
